
<%= content_tag :h1, @user.name %>

<%= @user.email%>
  <h2> List's that you are on!</h2>
  <% if @user.gift_lists.present? %>
    <ul> 
      <% @user.gift_lists.each do |list| %>
        <li><%= link_to list.title,  gift_list_path(list) %> </li>
    </ul>
      <% end %>
  <% else %>
      <%= render "form" %>
  <% end %>

  <h3>Gift's you want! </h3>
    <ul>
      <% @user.received_gifts.each do |gift| %>
        <li><%= link_to gift.name, @gift %></li>
      <% end %>
    </ul>
    <%= render "gift_form" %>

  <h3>Gift's you have given! </h3>
    <ul>
      <% @user.given_gifts.each do |gift| %>
        <li><%= gift.name %></li>
      <% end %>
    </ul>
    

<%= link_to "Sign out", new_session_path, method: "delete" %>