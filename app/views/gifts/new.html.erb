<div class="field" style="align-center">
  <p> Add a new gift to your list</p>
    <div>
    <ul>
      <% if @gift.errors.any? %>
        <% @gift.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
    <% end %>
  </div>
  <div class= "card" style="width: 300px">
    <form style="width: 300px">
      <%= form_for @gift do |form| %>
        <div class="mb-3">
            <%= form.label :name %>
            <%= form.text_field :name%>
        </div>
        <div class="mb-3">
          <%= form.label :price %>
          <%= form.number_field :price %>
        </div>
        <div class="mb-3">
          <%= form.label :website %>
          <%= form.text_field :website %>
        </div>
          <%= form.hidden_field :user_id, value: current_user.id %>
          <%= form.hidden_field :giver_id, value: 1 %>
        <div class="d-grid gap-2 col-6 mx-auto">
            <button type="button" class="btn btn-primary"><%= form.submit %></button>
        </div>
      <% end %>
    </form>
</div>