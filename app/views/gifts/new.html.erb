<div class="field" style="align-center">
  <p> Add a new gift to your list</p>
  
  <div class= "card d-flex justify-content-center" style="width: 280px">
    <div form style="width: 250px">
        <%= form_for @gift do |form| %>
          <div class="mb-3">
              <%=form.label :name %>
              <%=form.text_field :name%>
          </div>
          <div class="mb-3">
              <%=form.label :price %>
              <%=form.number_field :price %>
          </div>
          <div class="mb-3">
            <%=form.label :website %>
            <%=form.text_field :website %>
          </div>
          <%=form.hidden_field :user_id, value: current_user.id %>
          <%=form.hidden_field :giver_id, value: 1 %>
          <div class="d-grid gap-2 col-6 mx-auto">
            <button type="button" class="btn btn-primary"><%= form.submit %></button>
          </div>
      <% end %>
    </form>
  </div>
</div>