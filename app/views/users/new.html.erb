<h1> Sign up for Secret Santy Below!</h1>
<% if @user.errors.any? %>
<ul>
  <% @user.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
<br>
<%= form_for @user do |form| %>

<%=form.label :name %>
<%=form.text_field :name%>
<br>
<br>
<%=form.label :username %>
<%=form.text_field :username%>
<br>
<br>
<%=form.label :email %>
<%=form.email_field :email%>
<br>
<br>
<%=form.label :password %>
<%=form.password_field :password%>
<br>
<br>
<%= form.submit %>
<% end %>