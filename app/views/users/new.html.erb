<div class="container-fluid">
  <h1> Sign up for Secret Santy Below!</h1>
    <div>
      <ul>
        <% if @user.errors.any? %>
          <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
      </ul>
      <% end %>
    </div>
  <div class="card d-flex justify-content-center" style="width: 300px">
    <div form class="row g-3" style="width: 300px">
      <%= form_for @user do |form| %>
        <div class="col-8 mx-auto">
            <%= form.label :name %>
            <%= form.text_field :name%>
        </div> 
        <div class="col-8 mx-auto">
            <%= form.label :username %>
            <%= form.text_field :username%>
        </div> 
        <div class="col-8 mx-auto"> 
            <%= form.label :email %>
            <%= form.email_field :email%>
        </div>
        <div class="col-8 mx-auto"> 
            <%= form.label :password %>
            <%= form.password_field :password%>
            <span id="passwordHelpInline" class="form-text">
              Must be 8-20 characters long.
            </span>
        </div>
        <%= form.hidden_field :secret_santa_id%>
        <div class="col-6 mx-auto">
        <button class="btn btn-primary" type="button" ><%= form.submit %></button>
        <% end %>
        </div>
    </form>
  </div>
</div>